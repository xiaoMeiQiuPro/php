<script>
    $(function () {
        $("form").submit(function(){

            if($("#area2_id").val()<=0){
                layer.msg('請選擇二級區域',{'icon':2,'time':2000});return false;
            }

        });
        $("#area1_id").change(function(){
            var id = $(this).val();
            // alert(id);
            if(id>0){
                $.ajax({
                    type: "POST",
                    url: "__CONTROLLER__/ajax",
                    dataType:"json",
                    data: {pid:id},

                    //    async: false,
                    success: function(msg){
                        var h = '';
                        $(msg).each(function () {
                            h+="<option value= "+this.area_id +"> "+this.name+"</option>";
                        });
                        $("#area2_id").html(h);
                    },
                    error:function(){
                        alert("網絡異常,請稍後重試");
                    }
                });
            }
            else{
                h ='<option value="0" >---請先選擇一級區域---</option>';
                $("#area2_id").html(h);
            }

        })
    });

    function initialize()
    {
        var   b = '';
        var    a = '';
        var address = '';
        //-------------------------------------------------\
        $("#address").change(function(){
            address = $(this).val();
            if(address!=""){
                $.ajax({
                    type: "get",
                    url: "__CONTROLLER__/add",
                    dataType:"json",
                    data: {address:address},
                    //    async: false,
                    success: function(msg){
                        a = msg.lat;
                        b = msg.lng;
                        var   myCenter=new google.maps.LatLng(a,b);
                        var marker;
                        var mapProp = {
                            center: myCenter,
                            zoom:15,
                            mapTypeId: google.maps.MapTypeId.ROADMAP
                        };
                        var map = new google.maps.Map(document.getElementById("map"),mapProp);
                        marker=new google.maps.Marker({
                            position:myCenter,
                            animation:google.maps.Animation.BOUNCE
                        });
                        marker.setMap(map);
                        return false;
                    },
                    error:function(){
                        alert("網絡異常,請稍後重試");
                    }
                });
            }
        });
        var myCenter=new google.maps.LatLng("{$list.lat}","{$list.lon}");
        var marker;
        var mapProp = {
            center: myCenter,
            zoom:17,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map"),mapProp);
        marker=new google.maps.Marker({
            position:myCenter,
            animation:google.maps.Animation.BOUNCE
        });
        marker.setMap(map);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>
