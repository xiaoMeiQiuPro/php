                        // $this->success('上传成功！');
                        foreach ($info as $file) {
                            // echo json_encode($file);die;
                            $_POST['img_url'] = $file['savepath'] . $file['savename'];//头像路径
                        }
                    }
                } else {
                    // json(403,'没有上传头像','');
                    unset($_POST['img_url']);
                }
                $re = M('user')->where(['user_id' => $_POST['user_id']])->save();
                if ($re) {
                    json(200, '修改成功', $re);
                } else {
                    json(500, '網絡異常', '');
                }
            }
        }

