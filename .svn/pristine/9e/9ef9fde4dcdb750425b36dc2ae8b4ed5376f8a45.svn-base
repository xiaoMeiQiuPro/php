    //地圖介面
    function map()
    {
        /*比如：点A的经度为11695400，纬度为3995400。点B的经度为11695300，纬度为3995300。
        公式:两点间距离 = [ (A点经度 - B点经度)^2 + (A点纬度 - B点纬度)^2 ] ^ (1/2) = [ (11695400 - 11695300)^2
        + (3995400 - 3995300)^2 ] ^(1/2) =(10000+10000) ^ (1/2) =141米
        公式说明:加法 + ，减法 - ，乘法 *，除法 /，幂运算 ^(1/2)表示平方根 ^2表示平方。*/
        /* 比如：点A的经度为11695400，纬度为3995400。点B的经度为11695300，纬度为3995300。
        公式:两点间距离 = [ (A点经度 - B点经度)^2 + (A点纬度 - B点纬度)^2 ] ^ (1/2) = [ (11695400 - 11695300)^2
        + (3995400 - 3995300)^2 ] ^(1/2) =(10000+10000) ^ (1/2) =141米
        公式说明:加法 + ，减法 - ，乘法 *，除法 /，幂运算 ^(1/2)表示平方根 ^2表示平方。
        */
      //  $_POST['lon'] =114.187828;  $_POST['lat'] =22.324512;
        if(!$_POST['lon']||!$_POST['lat']){
            json(409);
        }
        else{
            $range = $_POST['range']?$_POST['range']:0.5;
            $re = M('project')->field('china_name,project_id,address,lon,lat')->select();
            foreach($re as $vo){
                $a[] = sqrt(pow($_POST['lon'] - $vo['lon'],2)
                    + pow($_POST['lat'] - $vo['lat'],2));
            }
        }
        foreach($a as $k=>$v){
            if($v<$range){
                $arr[] = $re[$k];
            }
        }

        if($arr){
            json(200,'success',$arr);
        }
        else{
            json(201,'無符合條件的項目');

        }
    }

