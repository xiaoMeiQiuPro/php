           json(200,'創建群組成功',getId());
       }
        else{
            json(500,'網絡異常');
        }
    }
    //解散群主
    function dismiss_group(){
        if(!$_POST['user_id']||!$_POST['group_id']){
            json(409);
        }
        $map["user_id"] = $_POST['user_id'];
        $map["group_id"] = $_POST['group_id'];
        if(M('group')->where($map)->find()){
            // 解散群组方法。（将该群解散，所有用户都无法再接收该群的消息。）
            $result = $this->ry->group()->dismiss($_POST['user_id'],$_POST['group_id']);
            $re = M('group')->where(['group_id'=>$_POST['group_id']])->delect();
            if($re){
                json(200,'解散群组成功');
            }
            else{
                json(500,'網絡異常');
            }
        }
        else{
            json(201,'你不是群主,不能解散');
        }

    }





