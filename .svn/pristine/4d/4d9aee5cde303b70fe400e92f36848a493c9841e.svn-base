<include file="Public/_header" title="普通會員列表"/>
<section class="Hui-article-box">
    <nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> <a href="__MODULE__/index" class="maincolor">首頁</a>
        <span class="c-gray en">&gt;</span>

        <span class="c-gray en">&gt;</span>
        普通會員列表 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a> </nav>
    <div class="Hui-article">
        <article class="cl pd-20">
            <form method="post" action="__CONTROLLER__/index1">
            <div class="text-c">
                <input type="text" class="input-text" style="width:250px" placeholder="輸入手機號丶郵箱丶暱稱關鍵字" id="" name="key">
                <button type="submit" class="btn btn-success" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
            </div>
            </form>
            <div class="cl pd-5 bg-1 bk-gray mt-20">
                <span class="l"> <a href="javascript:;" onclick="del('del_user1')"  class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量刪除</a> <a href="javascript:;" onclick="javascript:location.href='__CONTROLLER__/add_user1'" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加普通會員</a> </span>
                <span class="r">共有数据：<strong>{$count}</strong> 条</span>
            </div>
            <table class="table table-border table-bordered table-bg">
                <thead>
                <tr>
                    <th scope="col" colspan="12">普通會員列表</th>
                </tr>
                <tr class="text-c">
                    <th width="25"><input class="checkAll" type="checkbox" name="" value="0"></th>
                    <th>ID</th>
                    <th >手機號</th>
                    <th>郵箱</th>
                    <th>中文名</th>
                    <th>英文名</th>
                    <th >註冊時間</th>
                    <th >最後登錄時刻</th>
                    <th >是否啟用</th>
                    <th >操作</th>
                </tr>
                </thead>
                <tbody>
                <foreach name="list" item="vo" >
                <tr class="text-c">
                    <td><input  type="checkbox" class="box" value="{$vo.user_id}" name="box" /></td>
                    <td>{$vo.user_id}</td>
                    <td>{$vo.phone}</td>
                    <td>{$vo.email}</td>
                    <td>{$vo.china_name}</td>
                    <td>{$vo.english_name}</td>
                    <td>{$vo.register_time}</td>
                    <td>{$vo.last_time}</td>
                    <td class="td-status"><eq name="vo['status']" value="1" ><span class="label label-success radius">已启用</span><else/><span class="label label-default radius">已禁用</span></eq></td>
                    <td class="td-manage"><eq name="vo['status']" value="1" ><a style="text-decoration:none" onClick="admin_stop(this,'{$vo.user_id}')" data-url="__CONTROLLER__/ajax_status" href="javascript:;" title="停用"><i class="Hui-iconfont">&#xe631;</i></a> <else/><a onClick="admin_start(this,'{$vo.user_id}')" href="javascript:;" title="启用" data-url="__CONTROLLER__/ajax_status" style="text-decoration:none"><i class="Hui-iconfont">&#xe615;</i></a></eq><a title="编辑" href="javascript:location.href='__CONTROLLER__/update_user1/id/{$vo.user_id}';" onclick="" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> <a title="删除" href="javascript:;" data="{$vo.user_id}"  onclick="del2('{$vo.user_id}','del_user1')" class="ml-5 " style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>
                </tr>
                </foreach>
                </tbody>
            </table>
        </article>
        {$page}
    </div>
</section>

<include file="Public/_footer"  />