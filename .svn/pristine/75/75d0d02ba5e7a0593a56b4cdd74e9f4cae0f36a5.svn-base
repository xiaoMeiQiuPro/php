<include file="Public/_header" title="廣告-修改"/>
<article class="cl pd-20">
    <form action="__CONTROLLER__/update" method="post"  enctype="multipart/form-data" class="form form-horizontal" id="form-admin-add">
      <input type="hidden" value="{$list.ad_id}" name="ad_id"  />
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>廣告名字：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="{$list.ad_name}" required placeholder="" id="name" name="ad_name">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>跳轉地址：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="url"  class="input-text" autocomplete="off" value="{$list.skip_url}" required    name="skip_url">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>廣告圖片：</label>
            <div class="formControls col-xs-8 col-sm-9">&nbsp;&nbsp;&nbsp;
       <span class="btn-upload form-group">
      <input class="input-text upload-url radius" type="text"  name="img_url" id="uploadfile-1" readonly><a href="javascript:void();" class="btn btn-primary radius"> 浏览文件</a>
      <input type="file"  multiple name="file-1" class="input-file">
</span>   </div>
        </div>

        <!--        <div class="row cl">
                    <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>性别：</label>
                    <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                        <div class="radio-box">
                            <input name="sex" type="radio" id="sex-1" checked>
                            <label for="sex-1">男</label>
                        </div>
                        <div class="radio-box">
                            <input type="radio" id="sex-2" name="sex">
                            <label for="sex-2">女</label>
                        </div>
                    </div>
                </div>-->
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>排序：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="number" required class="input-text" value="{$list.sort}" placeholder="" id="phone" name="sort">(數字越小排名越前)
            </div>
        </div>
        <!--       <div class="row cl">
                   <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>邮箱：</label>
                   <div class="formControls col-xs-8 col-sm-9">
                       <input type="text" class="input-text" placeholder="@" name="email" id="email">
                   </div>
               </div>-->
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3">廣告類型：</label>
            <div class="formControls col-xs-8 col-sm-9"> <span class="select-box" style="width:150px;">
				<select class="select" name="type" size="1">
                    <option <eq name="list['type']" value="2" >selected</eq> value="2">banner</option>
                    <option <eq name="list['type']" value="1" >selected</eq> value="1">啟動頁</option>
                </select>
				</span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>啟動頁廣告時間：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="number" required class="input-text" value="{$list.time}" placeholder=""  name="time">(秒)
            </div>
        </div>
        <!--        <div class="row cl">
                    <label class="form-label col-xs-4 col-sm-3">备注：</label>
                    <div class="formControls col-xs-8 col-sm-9">
                        <textarea name="" cols="" rows="" class="textarea"  placeholder="说点什么...100个字符以内" dragonfly="true" onKeyUp="textarealength(this,100)"></textarea>
                        <p class="textarea-numberbar"><em class="textarea-length">0</em>/100</p>
                    </div>
                </div>-->
        <div class="row cl">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
            </div>
        </div>
    </form>
</article>


<script type="text/javascript">


    $(function() {
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });


    });
</script>
